@model Course;


<div class="col-md-4">
    <img src="~/img/@Model.Image" class="img-fluid rounded-start" alt="">
</div>
<div class="col-md-8">
    <div class="card-body">

        <a href="/Course/Details/@Model.id">
            <h5 class="card-title">@Model.Title</h5>
        </a>

        <p class="card-text">@Model.Description</p>
        <div>
            @if(Model.Tags != null){
            @foreach(var tag in Model.Tags){
                <span class="badge bg-primary">@tag</span>
            }
        }
        </div>

    </div>
</div>
    