@model Course
<div class="card mb-3">
    <div class="col-md-4">
        <img src="~/img/@Model.Image" class="img-fluid rounded-start" alt="">
    </div>
    <div class="col-md-8">
        <div class="card-body">

            <a href="/Course/Details/@Model.id">
                <h5 class="card-title">@Model.Title</h5>
            </a>
            
            <p class="card-text">@Model.Description</p>

            
        </div>
    </div>
    
</div>